<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Blog Title: <%= @post.title %> <br />Author: <%= @post.author %> <br />Posted: <%= @post.created_at.strftime("%B %e, %Y at %l:%M %p") %></h3>
  </div>
  <div class="panel-body">
    <%= @post.blog_entry %>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |

<%= link_to 'Back', posts_path %>

<br />
<h4>Comments:</h4>

<div id="comments">
	<%= render 'comments/form', comment: @comment %>

	<br />

	<h4>What everyone else is saying:</h4>


	<% @post.comments.each do |c| %>
		<div class="panel panel-info">
			<div class="panel-heading"><h3 class="panel-title">Comment Date: <%= c.created_at.strftime("%B %e, %Y at %l:%M %p") %></h3></div>
				<div class="panel-body">
			<p>
				<%= c.author %> said... <br />
				<%= c.comment_entry %>
			</p>
				</div>
		</div>
	<% end %>
</div>




